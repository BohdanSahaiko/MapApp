<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RestaurantInformationActivity"
    tools:showIn="@layout/activity_rest">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="0dp"
                android:id="@+id/address_image"
                android:src="@drawable/ic_my_location_black_48dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/address"
                android:editable="false"
                android:textIsSelectable="false"
                android:textStyle="italic"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="24dp" />
            <ImageView
                android:layout_marginTop="26dp"
                android:id="@+id/number_image"
                android:src="@drawable/ic_call_black_48dp"
                android:layout_below="@+id/address"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/number"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/address"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:phoneNumber="true"
                android:textStyle="italic"
                android:textColor="#000000"
                android:layout_marginLeft="24dp" />
            <ImageView
                android:layout_marginTop="26dp"
                android:id="@+id/time_image"
                android:src="@drawable/ic_access_alarm_black_48dp"
                android:layout_below="@+id/number"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/time"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/number"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="italic"
                android:textColor="#000000"
                android:layout_marginLeft="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/http"
                android:layout_below="@+id/time"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="22dp"
                android:textStyle="italic"
                android:textColor="#000000"
                android:layout_marginLeft="24dp" />
            <ImageView
                android:layout_marginTop="26dp"
                android:id="@+id/http_image"
                android:src="@drawable/ic_public_black_48dp"
                android:layout_below="@+id/time"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/ops"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/http"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="italic"
                android:textColor="#000000" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
